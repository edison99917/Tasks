@model Edison.Models.AssetModel

<h1>Edit Asset</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Asset!.ID" />
            <div class="form-group">
                <label asp-for="Asset!.AssetCode" class="control-label"></label>
                <input asp-for="Asset!.AssetCode" class="form-control" />
                <span asp-validation-for="Asset!.AssetCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.AssetName" class="control-label"></label>
                <input asp-for="Asset!.AssetName" class="form-control" />
                <span asp-validation-for="Asset!.AssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.AssetCategory" class="control-label"></label>
                <select asp-for="Asset!.AssetCategory!.ID" asp-items="@(new SelectList(Model.AssetCategories, "ID", "Name"))" class="form-control"></select>
                <span asp-validation-for="Asset!.AssetCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.Department" class="control-label"></label>
                <select asp-for="Asset!.Department!.ID" asp-items="@(new SelectList(Model.Departments, "ID", "Name"))" class="form-control"></select>
                <span asp-validation-for="Asset!.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.PurchaseDate" class="control-label"></label>
                <input asp-for="Asset!.PurchaseDate" class="form-control" value="" type="datetime" />
                <span asp-validation-for="Asset!.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.Price" class="control-label"></label>
                <input asp-for="Asset!.Price" class="form-control" type="number" />
                <span asp-validation-for="Asset!.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Asset!.SupplierName" class="control-label"></label>
                <input asp-for="Asset!.SupplierName" class="form-control" />
                <span asp-validation-for="Asset!.SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
